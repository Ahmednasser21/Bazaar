<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cd_FavProduct"
    android:layout_width="180dp"
    android:layout_height="350dp"
    android:layout_margin="8dp"
    android:background="@drawable/curved_brownish_background"
    android:elevation="4dp"
    android:padding="2dp">

    <ImageView
        android:id="@+id/iv_favImageProduct"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="4dp"
        android:contentDescription="@string/item_image"
        android:scaleType="fitXY"
        android:src="@drawable/men"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/product_vendor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/metropolis_regular"
        android:layout_marginTop="8dp"
        android:layout_marginStart="4dp"
        android:text="Adidas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_favImageProduct" />

    <TextView
        android:id="@+id/tv_favProductName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/metropolis_semibold"
        android:text="New Style T-Shirt"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_vendor" />

    <Button
        android:id="@+id/btn_deleteFromFavProducts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:background="@drawable/curved_white_background"
        android:fontFamily="@font/metropolis_medium"
        android:text="@string/delete"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_favProductName"
        app:layout_constraintStart_toStartOf="@+id/tv_favProductName" />
</androidx.constraintlayout.widget.ConstraintLayout>